<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
     http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
     http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd">

    <jdbc:initialize-database ignore-failures="ALL" enabled="${db.rebuild}">
        <jdbc:script location="classpath:database/schema.sql"/>
        <jdbc:script location="classpath:database/bpcommon_schema.sql"/>
    </jdbc:initialize-database>
    
    <bean class="com.jje.common.utils.DatabaseInitializer">
    	<constructor-arg index="0">
    		<value>database/data.sql</value>
    	</constructor-arg>
    	<constructor-arg index="1">
    		<value>${db.prepare.data}</value>
    	</constructor-arg>
    </bean>

    <bean id="dataSource" class="com.jje.common.utils.DataSourceFactoryBean"
          p:jdbcDataSource-ref="jdbcDataSource"
          p:jndiName="${jndi.dataSource}"
          p:namingFactory="weblogic.jndi.WLInitialContextFactory"
          p:providerUrl="t3://${jndi.host}:${jndi.port}"/>

   
    <bean id="jdbcDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <property name="driverClass">
            <value>${jdbc.driverClass}</value>
        </property>
        <property name="jdbcUrl">
            <value>${jdbc.url}</value>
        </property>
        <property name="user">
            <value>${jdbc.user}</value>
        </property>
        <property name="password">
            <value>${jdbc.password}</value>
        </property>
    </bean>


</beans>